{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "strict": true,                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,                                
    "resolveJsonModule": true,                           
    "allowSyntheticDefaultImports": true,                
    "moduleResolution": "node"                           
  }
}
